{%  style  %} 
    .section_space{
        border: {{ section.settings.number_field }}px solid black;
    }
    .radio_section{
        text-align: {{ section.settings.radio_field }};
    }
    .font_size h1{
        font-size: {{ section.settings.font_size }}px;
    }
    .align_item{
        border: 3px solid black;
        display: flex;
        justify-content: {{ section.settings.vertical_alignment }};
    }
    .color_text h1{
        color: {{ section.settings.color_select }};
    }
    .article_container{
        width: 50%;
        border: 2px solid black;
    }
    .article_container img{
        width: 100%;
    }
    .blog_container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        border: 1px solid black;
    }
    .single_blog{
        border: 1px solid red;
        width: 100%;
    }
    .single_blog img{
        width: 100%;
    }
    .our_all_products{
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
    }
    .single_collection_product{
        border: 2px solid black;
    }
    .single_collection_product img{
        width: 100%;
        height: 350px;
        object-fit: cover;
        
    }

{% endstyle %}



<div class="page-width">
    {% if section.settings.checkbox_field %}
        <h1>Checkbox </h1>
    {% endif %}
    <div class="section_space">
        {% if section.settings.number_field %}
            <h1>Number is {{ section.settings.number_field }}</h1>
        {% endif %}
    </div>
    <div class="radio_section">
        <h1>Radio Field</h1>
        <p>Radio {{section.settings.radio_field}}</p>
    </div>
    <div class="font_size">
        {% if section.settings.font_size != blank %}
            <h1>Font Size</h1>
        {% endif %}
    </div>
    <div class="align_item">
        {% if section.settings.vertical_alignment != blank %}
            <h1>Align Item</h1>
        {% endif %}
    </div>
    <div class="color_text">
        {% if section.settings.color_select != blank %}
            <h1>Color</h1>
        {% endif %}
    </div>
    <div>
        {% if section.settings.text_add != blank %}
            <h1>{{ section.settings.text_add }}</h1>
        {% endif %}
    </div>
    <div>
        {% if section.settings.textarea_add != blank %}
            <p>{{ section.settings.textarea_add }}</p>
        {% endif %}
    </div>
    <div class="article_container">
        {% assign article = section.settings.article_field %}
        {{ article.image | image_url: width: 800 | image_tag }}
        <br>
        <small>Author: {{ article.author }}</small> <small>Publish at: {{ article.created_at | date: "%b %d, %Y"}}</small>
        <p>
            {% for tag in article.tags %}
                <span>{{ tag }}</span>
            {% endfor %}
        </p>
        <a href="{{ article.url }}"><h1>{{ article.title }}</h1></a>
        <p>{{ article.content }}</p>
        <p>{{ article.excerpt }}</p>
    </div>
    <h1>Blog</h1>
    <div class="blog_container">
        {%  assign blogs  = section.settings.blog_field %}
        {% for blog in blogs.articles %}
            <div class="single_blog">
                {{ blog.image |  image_url: width: 800 |  image_tag }}
                <a href="{{ blog.url }}"><h1>{{blog.title}}</h1></a>
                <p> {{blog.content}} </p>
            </div>
        {% endfor %}
    </div>
    <div class="collection_container">
        {% assign collection = section.settings.collection_field %}
        <div>
            {{ collection.image | image_url: width: 800 | image_tag }}
        </div>
        <div>
            <a href="{{ collection.url }}">
                <p>Total Products: {{ collection.all_products_count }}</p>
                <p>Collection id: {{ collection.id }}</p>
                <p>Collection handle/url: {{ collection.handle }}</p>
            </a>
        </div>
        <h1>Products of collection</h1>
        <div class="our_all_products">
            {% for product in collection.products %}
                <div class="single_collection_product">
                    {{ product.featured_image |  image_url: width: 800 |  image_tag  }}
                    <a href="{{ product.url }}">
                        <h2>{{ product.title }}</h2>
                    </a>
                    <p>{{ product.description }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
    <h1>Collection + products</h1>
    <div class="collection_list">
        {% assign collection_list = section.settings.collection_list_field %}
        {% for collection in collection_list %}
            {{ collection.image |  image_url: width: 800 | image_tag }}
            <h2>{{ collection.title }}</h2>
            <h1>Our collection products - {{ forloop.index }}</h1>
            <div class="our_all_products">
                {% for product in collection.products %}
                    <div class="single_collection_product">
                        {{ product.featured_image | image_url: width: 800 |  image_tag }}
                        <a href="{{ product.url }}">
                            <h2>{{ product.title }}</h2>
                        </a>
                        <p>{{ product.description | truncatewords: 25 }}</p>
                    </div>
                {% endfor %}
            </div>
        {% endfor %}
    </div>


</div>



{% schema %}
{
    "name": "All Input Fields",
    "settings": [
        {
            "type": "checkbox",
            "id": "checkbox_field",
            "label": "Checkbox",
            "default": true
        },
        {
            "type": "header",
            "content": "Number"
        },
        {
            "type": "number",
            "id": "number_field",
            "label": "Number",
            "default": 10
        },
        {
            "type": "header",
            "content": "Radio"
        },
        {
            "type": "radio",
            "id": "radio_field",
            "label": "Radio",
            "default": "center",
            "options": [
                {
                    "label": "Left",
                    "value": "left"
                },
                {
                    "label": "Center",
                    "value": "center"
                },
                {
                    "label": "Right",
                    "value": "right"
                }
            ]
        },
        {
            "type": "header",
            "content": "Ranges"
        },
        {
            "type": "range",
            "id": "font_size",
            "min": 1,
            "max": 100,
            "step": 1,
            "unit": "px",
            "label": "Font Size",
            "default": 14
        },
        {
            "type": "header",
            "content": "Select Align"
        },
        {
            "type": "select",
            "id": "vertical_alignment",
            "label": "Vertical Alignment",
            "options": [
                {
                    "value": "left",
                    "label": "Left"
                },
                {
                    "value": "center",
                    "label": "Center"
                },
                {
                    "value": "right",
                    "label": "Right"
                }
            ]
        },
        {
            "type": "header",
            "content": "Select Color"
        },
        {
            "type": "select",
            "id": "color_select",
            "label": "Color",
            "options": [
                {
                    "value": "red",
                    "label": "Red"
                },
                {
                    "value": "green",
                    "label": "Green"
                },
                {
                    "value": "white",
                    "label": "White"
                },
                {
                    "value": "black",
                    "label": "Black"
                },
                {
                    "value": "gray",
                    "label": "Gray"
                },
                {
                    "value": "orange",
                    "label": "Orange"
                }
            ]
        },
        {
            "type": "header",
            "content": "Text"
        },
        {
            "type": "text",
            "id": "text_add",
            "label": "Text",
            "default": "Quick Links"
        },
        {
            "type": "header",
            "content": "Text"
        },
        {
            "type": "textarea",
            "id": "textarea_add",
            "label": "TextArea",
            "default": "This is textarea"
        },
        {
            "type": "header",
            "content": "Article"
        },
        {
            "type": "article",
            "id": "article_field",
            "label": "Article"
        },
        {
            "type": "header",
            "content": "Blog"
        },
        {
            "type": "blog",
            "id": "blog_field",
            "label": "Blog"
        },
        {
            "type": "header",
            "content": "Collection"
        },
        {
            "type": "collection",
            "id": "collection_field",
            "label": "Collection"
        },
        {
            "type": "header",
            "content": "Collection List Field"
        },
        {
            "type": "collection_list",
            "id": "collection_list_field",
            "label": "Collection list"
        }

    ],
    "presets": [
        {
            "name": "All Input Fields"
        }
    ]
}
{% endschema %}