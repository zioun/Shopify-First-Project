{% style %}
    .custom_image_with_text{
        width: 1200px;
        margin: auto;
    }
    .custom_image_with_text__container{
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 50px;
    }
    
    .custom_image_left img{
        width: 100%;
        height: 500px;
        border-radius: 5px;
    }
    .custom_image_right{
        
    }
    .custom_image_with_text-{{ section.id }}{
        padding-top: {{ section.settings.top_padding }}px;
        padding-bottom: {{ section.settings.bottom_padding }}px;
    }
    .section_btn{
        margin-top: 50px;
    }
    .custom_btn{
        padding-left: 30px;
        padding-right: 30px;
        padding-top: 15px;
        padding-bottom: 15px;
        color: white;
        background: black;
        text-decoration: none;
    }

    .custom_image_right h1{
        color: {{ section.settings.title_color }};
    }
    .custom_image_right p{
        color: {{ section.settings.paragraph_color }};
    }
    .section_btn a{
        color: {{ section.settings.button_text_color }};
        background: {{ section.settings.button_bg_color }};
        
    } 
    
    
    

{% endstyle %}

<div class="custom_image_with_text custom_image_with_text-{{ section.id }}">
    <div class="custom_image_with_text__container">
        <div class="custom_image_left">
            {%if section.settings.image != blank%}
                {{section.settings.image |  image_url: width:3200 |  image_tag }}     
            {% else %}
                {{"detailed-apparel-1" |  placeholder_svg_tag}}
            {% endif %}
        </div>
        <div class="custom_image_right">
            {% for block in section.blocks %}
                {% case block.type %}
                    {% when "heading_block" %}
                        <div {{ block.shopify_attributes }}>
                            <h1>{{block.settings.heading}}</h1>
                        </div>
                    {% when "paragraph_block" %}
                        <div {{ block.shopify_attributes }}>
                            {{block.settings.paragraph}}
                        </div>
                    {% when "button_block" %}    
                        <div class="section_btn" {{ block.shopify_attributes }}>
                            <a class="custom_btn" href="{{ block.settings.btn_url }}">{{ block.settings.btn_label }}</a>
                        </div>
                {% endcase %}
            {% endfor %}
        </div>
    </div>
</div>


{% schema %}
    {
        "name": "Custom Image With Text",
        "class": "custom_class",
        "tag": "section",
        "limit": 1,
        "max_blocks": 2,
        "disabled_on": {
            "groups": ["header","footer"]
        },
        "settings": [
            {
                "type": "header",
                "content": "Set Your Images"
            },
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
            {
                "type": "header",
                "content": "Colors"
            },
            {
                "type": "color",
                "id": "title_color",
                "label": "Title",
                "default": "#ff0000"
            },
            {
                "type": "color",
                "id": "paragraph_color",
                "label": "Paragraph",
                "default": "#000000"
            },
            {
                "type": "color",
                "id": "button_bg_color",
                "label": "Button Background Color",
                "default": "#000000"
            },
            {
                "type": "color",
                "id": "button_text_color",
                "label": "Button Text Color",
                "default": "#ffffff"
            },
            
            {
                "type": "header",
                "content": "Section Padding"
            },
            {
                "type": "range",
                "id": "top_padding",
                "label": "Top Padding",
                "min": 0,
                "max": 100,
                "step": 4,
                "unit": "px",
                "default": 36
            },
            {
                "type": "range",
                "id": "bottom_padding",
                "label": "Bottom Padding",
                "min": 0,
                "max": 100,
                "step": 4,
                "unit": "px",
                "default": 36
            }
        ],
        "blocks": [
            {
                "type": "heading_block",
                "name": "Heading",
                "limit": 1,
                "settings": [
                    {
                        "type": "text",
                        "id": "heading",
                        "label": "Title",
                        "default": "Your Title"
                    }
                ]
            },
            {
                "type": "paragraph_block",
                "name": "Paragraph",
                "limit": 2,
                "settings": [
                    {
                        "type": "richtext",
                        "id": "paragraph",
                        "label": "Paragraph",
                        "default": "<p>Your Paragraph</p>"
                    }
                ]
            },
            {
                "type": "button_block",
                "name": "Button",
                "settings": [
                    {
                        "type": "url",
                        "id": "btn_url",
                        "label": "Button Link"
                    },
                    {
                        "type": "text",
                        "id": "btn_label",
                        "label": "Button label",
                        "default": "Purchase Now"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Custom image with text",
                "blocks": [
                    {
                        "type": "heading_block"
                    },
                    {
                        "type": "paragraph_block"
                    },
                    {
                        "type": "button_block"
                    }
                ]
            }
        ]
        
    }
{%endschema%}